@model IEnumerable<MasterPiece.Models.WeddingVenueViewModel>


@{
    ViewBag.Title = "ShowVenues";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    th, td, textarea {
        text-align: right;
    }
    h5, h4{
        width:100%;
        text-align:right;
    }

    .small-image {
        width: 100px;
        height: 100px;
        cursor: pointer;
        margin-bottom: 10px;
    }

    .modal-body {
        max-height: 650px;
        overflow-y: scroll;
    }
    .swal2-actions {
        direction: rtl; /* Align buttons from right to left */
    }

    .swal2-confirm {
        margin-left: 5px; /* Ensure some spacing between buttons */
    }

    .swal2-cancel {
        margin-right: 5px; /* Ensure some spacing between buttons */
    }
    .customWidth{
        max-width:180px;
    }
</style>

<div class="container-fluid pt-4 px-4">
    <div class="bg-light text-center rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h2 class="text-end">عرض جميع الصالات</h2>
            <a class="btn btn-primary" href="@Url.Action("CreateVenue","Admin")">إضافة صالة</a>
        </div>
        <div class="table-responsive">
            <table class="table text-start align-middle table-bordered table-hover mb-0" dir="rtl">
                <thead>
                    <tr class="text-dark">
                        <th scope="col">الرقم</th>
                        <th scope="col">الصورة</th>
                        <th scope="col">اسم القاعة</th>
                        <th scope="col">الموقع</th>
                        <th scope="col">السعر (دينار)</th>
                        <th scope="col">التقييم</th>
                        <th scope="col">الخصم %</th>
                        <th scope="col">الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Venue.VenueId</td>
                            <td><img src="~/Content/img/@item.Venue.ImageUrl" alt="@item.Venue.Name" class="img-thumbnail" style="width:100px;"></td>
                            <td class="customWidth">@item.Venue.Name</td>
                            <td class="customWidth">@item.Venue.Location</td>
                            <td>@item.Venue.Price</td>
                            <td>@item.Venue.Rate</td>
                            <td>@item.Venue.Discount</td>
                            <td>
                                <!-- Action Buttons -->
                                <a class="btn btn-sm btn-primary" href="@Url.Action("Index", "WeddingVenueDetails", new { id = @item.Venue.VenueId })">عرض</a>
                                <a class="btn btn-sm btn-warning" href="javascript:void(0);" data-toggle="modal" data-target="#editModal-@item.Venue.VenueId">تعديل</a>
                                <form id="deleteForm-@item.Venue.VenueId" action="@Url.Action("DeleteVenue", "Admin", new { id = @item.Venue.VenueId })" method="post" style="display:inline-block;">
                                    @Html.AntiForgeryToken()
                                    <button type="button" class="btn btn-sm btn-danger" onclick="confirmDelete(@item.Venue.VenueId)">حذف</button>
                                </form>
                            </td>
                        </tr>

                        <!-- Modal for Edit -->
                        <div class="modal fade" id="editModal-@item.Venue.VenueId" tabindex="-1" role="dialog" aria-labelledby="editModalLabel-@item.Venue.VenueId" aria-hidden="true">
                            <div class="modal-dialog modal-lg" role="document">
                                <!-- Added 'modal-lg' for larger modal -->
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">تعديل القاعة</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                        <!-- Added styles for better alignment -->
                                    </div>
                                    <div class="modal-body">
                                        <!-- Form for editing venue -->
                                        @using (Html.BeginForm("EditVenue", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                        {
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" id="Venue_VenueId" name="Venue.VenueId" value="@item.Venue.VenueId" />
                                            <input type="hidden" id="VenueDetails.VenueDetailId" name="VenueDetails.VenueDetailId" value="@item.VenueDetails.VenueDetailId" />


                                            <div class="container-fluid">
                                                <!-- Venue Details Section -->
                                                <h4 class="mb-3">تفاصيل القاعة</h4>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <!-- Location -->
                                                        <div class="form-group">
                                                            <label for="VenueLocation" class="control-label">الموقع</label>
                                                            <input type="text" id="VenueLocation" name="Venue.Location" class="form-control" placeholder="الموقع" value="@item.Venue.Location">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <!-- Venue Name -->
                                                        <div class="form-group">
                                                            <label for="VenueName" class="control-label">اسم الصالة</label>
                                                            <input type="text" id="VenueName" name="Venue.Name" class="form-control" placeholder="اسم الصالة" value="@item.Venue.Name">
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <!-- Rate -->
                                                        <div class="form-group">
                                                            <label for="VenueRate" class="control-label">التقييم</label>
                                                            <input type="number" id="VenueRate" name="Venue.Rate" class="form-control" placeholder="التقييم" min="1" max="5" value="@item.Venue.Rate">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <!-- Price -->
                                                        <div class="form-group">
                                                            <label for="VenuePrice" class="control-label">السعر</label>
                                                            <input type="number" id="VenuePrice" name="Venue.Price" class="form-control" placeholder="السعر" step="0.01" value="@item.Venue.Price">
                                                        </div>
                                                    </div>
                                                </div>


                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <!-- Rate -->
                                                        <div class="form-group">
                                                            <label for="VenueImageUrl" class="control-label">الصورة الرئيسية</label>
                                                            <input type="text" id="VenueImageUrl" name="Venue.ImageUrl" class="form-control" placeholder="رابط الصورة الرئيسية" value="@item.Venue.ImageUrl">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <!-- Discount -->
                                                        <div class="form-group">
                                                            <label for="VenueDiscount" class="control-label">الخصم</label>
                                                            <input type="number" id="VenueDiscount" name="Venue.Discount" class="form-control" placeholder="الخصم" value="@item.Venue.Discount">
                                                        </div>
                                                    </div>
                                                </div>

                                                <!-- Main Image -->
                                               

                                                <!-- Venue Additional Details -->
                                                @if (item.VenueDetails != null)
                                                {
                                                    <hr />
                                                    <h4 class="mb-3">تفاصيل إضافية</h4>

                                                    <div class="form-group">
                                                        <label class="control-label">الصور</label>
                                                        <div class="row">
                                                            <!-- Editable URLs for images -->
                                                            <div class="col-md-4">
                                                                <img src="@item.VenueDetails.ImageUrl1" class="img-thumbnail small-image" data-image="1" onclick="showLargeImage('@item.VenueDetails.ImageUrl1')" />
                                                                <input type="text" class="form-control" value="@item.VenueDetails.ImageUrl1" data-image="1" name="VenueDetails.ImageUrl1" oninput="updateImage(1, this)" />
                                                            </div>
                                                            <div class="col-md-4">
                                                                <img src="@item.VenueDetails.ImageUrl2" class="img-thumbnail small-image" data-image="2" onclick="showLargeImage('@item.VenueDetails.ImageUrl2')" />
                                                                <input type="text" class="form-control" value="@item.VenueDetails.ImageUrl2" data-image="2" name="VenueDetails.ImageUrl2" oninput="updateImage(2, this)" />
                                                            </div>
                                                            <div class="col-md-4">
                                                                <img src="@item.VenueDetails.ImageUrl3" class="img-thumbnail small-image" data-image="3" onclick="showLargeImage('@item.VenueDetails.ImageUrl3')" />
                                                                <input type="text" class="form-control" value="@item.VenueDetails.ImageUrl3" data-image="3" name="VenueDetails.ImageUrl3" oninput="updateImage(3, this)" />
                                                            </div>
                                                            <div class="col-md-4">
                                                                <img src="@item.VenueDetails.ImageUrl4" class="img-thumbnail small-image" data-image="4" onclick="showLargeImage('@item.VenueDetails.ImageUrl4')" />
                                                                <input type="text" class="form-control" value="@item.VenueDetails.ImageUrl4" data-image="4" name="VenueDetails.ImageUrl4" oninput="updateImage(4, this)" />
                                                            </div>
                                                            <div class="col-md-4">
                                                                <img src="@item.VenueDetails.ImageUrl5" class="img-thumbnail small-image" data-image="5" onclick="showLargeImage('@item.VenueDetails.ImageUrl5')" />
                                                                <input type="text" class="form-control" value="@item.VenueDetails.ImageUrl5" data-image="5" name="VenueDetails.ImageUrl5" oninput="updateImage(5, this)" />
                                                            </div>
                                                            <div class="col-md-4">
                                                                <img src="@item.VenueDetails.ImageUrl6" class="img-thumbnail small-image" data-image="6" onclick="showLargeImage('@item.VenueDetails.ImageUrl6')" />
                                                                <input type="text" class="form-control" value="@item.VenueDetails.ImageUrl6" data-image="6" name="VenueDetails.ImageUrl6" oninput="updateImage(6, this)" />
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <!-- Description -->
                                                    <div class="form-group">
                                                        <label for="VenueDescription" class="control-label">الوصف</label>
                                                        <textarea id="VenueDescription" name="VenueDetails.Description" class="form-control" rows="4" placeholder="الوصف">@item.VenueDetails.Description</textarea>
                                                    </div>

                                                    <!-- Services -->
                                                    <div class="form-group">
                                                        <label for="VenueServices" class="control-label">الخدمات</label>
                                                        <textarea id="VenueServices" name="VenueDetails.Services" class="form-control" rows="4" placeholder="الخدمات">@item.VenueDetails.Services</textarea>
                                                    </div>

                                                    <div class="form-group">
                                                        <label for="VenuePrice" class="control-label">وصف السعر</label>
                                                        <textarea id="VenuePrice" name="VenueDetails.PriceDetails" class="form-control" rows="2" placeholder="وصف السعر">@item.VenueDetails.PriceDetails</textarea>
                                                    </div>

                                                    <!-- Capacity Notes -->
                                                    <div class="form-group">
                                                        <label for="VenueCapacityNotes" class="control-label">سعة القاعة</label>
                                                        <textarea id="VenueCapacityNotes" name="VenueDetails.CapacityNotes" class="form-control" rows="2" placeholder="سعة القاعة">@item.VenueDetails.CapacityNotes</textarea>
                                                    </div>

                                                    <!-- Map Location -->
                                                    <div class="form-group">
                                                        <label for="VenueLocation" class="control-label">الخريطة</label>
                                                        <input type="text" id="VenueLocation" name="VenueDetails.Location" class="form-control" placeholder="رابط الخريطة" value="@item.VenueDetails.Location">
                                                    </div>
                                                }
                                                else
                                                {
                                                    <p>لا توجد تفاصيل مضافة لهذه القاعة</p>
                                                }

                                                <!-- Submit Button -->
                                                <div class="text-center">
                                                    <button type="submit" class="btn btn-success btn-lg">حفظ التغييرات</button>
                                                    <button type="button" class="btn btn-secondary btn-lg" data-dismiss="modal">إلغاء</button>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<!-- Modal to Display Large Image -->
<div class="modal fade" id="imageModal" tabindex="-1" role="dialog" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center">
                <img id="largeImage" src="" alt="Large Image" class="img-fluid" />
            </div>
        </div>
    </div>
</div>


<script>
    function confirmDelete(venueId) {
        Swal.fire({
            title: 'هل أنت متأكد؟',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            cancelButtonText: 'إلغاء',
            confirmButtonText: 'تأكيد',
        }).then((result) => {
            if (result.isConfirmed) {
                // Submit the form if confirmed
                document.getElementById('deleteForm-' + venueId).submit();
            }
        });
    }

    function showLargeImage(imageUrl) {
        // Set the source of the large image in the modal
        document.getElementById("largeImage").src = imageUrl;

        // Show the modal
        $('#imageModal').modal('show');
    }

    function updateImage(imageIndex, inputElement) {
        // Get the corresponding image element using the data attribute
        var imageElement = document.querySelector(`img[data-image="${imageIndex}"]`);
        // Update the image src with the new URL
        if (imageElement) {
            imageElement.src = inputElement.value; // Update the image source
        } else {
            console.error(`Image with data-image="${imageIndex}" not found.`);
        }
    }

</script>