        /* General Navbar Styling */
.header {
    background-color: #f8f9fa; /* Light background */
    padding: 10px 0;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Add subtle shadow */
    transition: all 0.3s ease;
}

.header.scrolled {
    background-color: #7D702F; /* Change color when scrolling */
    padding: 5px 0;
}

/* Logo Styling */
.logo img {
    max-height: 50px;
}

/* Navmenu Styling */
.navmenu {
    padding: 0;
    display: flex;
    justify-content: center;
    align-items: center;
}

.navmenu ul {
    margin: 0;
    padding: 0;
    list-style: none;
    display: flex;
    gap: 25px; /* Increased gap between links */
}

.navmenu a {
    color: #7D702F;
    font-size: 18px;
    font-weight: 500;
    padding: 10px 15px;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: color 0.3s, border-bottom 0.3s;
    border-bottom: 2px solid transparent;
}

.navmenu a:hover,
.navmenu .active {
    color: #d1b75b; /* Gold color on hover */
    border-bottom: 2px solid #d1b75b; /* Add bottom border on hover */
}

/* Dropdown Menu */
.navmenu .dropdown ul {
    position: absolute;
    background-color: #fff;
    padding: 15px 0;
    border-radius: 6px;
    box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
    opacity: 0;
    visibility: hidden;
    transform: translateY(20px);
    transition: all 0.3s ease;
}

.navmenu .dropdown:hover ul {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
}

.navmenu .dropdown ul li {
    min-width: 220px;
}

.navmenu .dropdown ul a {
    font-size: 16px;
    padding: 10px 20px;
    color: #555;
    transition: all 0.3s ease;
}

.navmenu .dropdown ul a:hover {
    background-color: #f1f1f1;
    color: #7D702F;
}

/* Mobile Menu Toggle */
.mobile-nav-toggle {
    color: #7D702F;
    font-size: 24px;
    cursor: pointer;
}

/* Search Box */
.input-group {
    max-width: 300px;
    margin-right: 20px;
}

.form-outline {
    position: relative;
}

.form-outline input {
    border: 1px solid #7D702F;
    padding-right: 40px;
    text-align: right;
}

.form-outline i {
    position: absolute;
    right: 10px;
    top: 50%;
    transform: translateY(-50%);
    color: #7D702F;
}

/* Cart Icon Styling */
.bi-cart {
    font-size: 22px;
    color: #7D702F;
    margin-right: 10px;
    cursor: pointer;
}

.bi-cart:hover {
    color: #d1b75b;
}

/* Dropdown RTL alignment */
.dropdown ul {
    text-align: right;
    direction: rtl;
}

.dropdown ul li a {
    padding-right: 20px;
}

