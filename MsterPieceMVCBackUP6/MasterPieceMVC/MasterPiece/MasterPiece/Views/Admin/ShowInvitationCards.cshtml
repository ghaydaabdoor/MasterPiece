@model IEnumerable<MasterPiece.Models.InvitationCard>

@{
    ViewBag.Title = "عرض بطاقات الدعوة";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; // Use Admin layout for consistent styling
}

<style>
    th, td, textarea {
        text-align: right;
    }

    h5, h4 {
        width: 100%;
        text-align: right;
    }

    .small-image {
        width: 100px;
        height: 100px;
        cursor: pointer;
        margin-bottom: 10px;
    }

    .modal-body {
        max-height: 650px;
        overflow-y: scroll;
    }

    .swal2-actions {
        direction: rtl;
    }

    .swal2-confirm {
        margin-left: 5px;
    }

    .swal2-cancel {
        margin-right: 5px;
    }
</style>

<div class="container-fluid pt-4 px-4">
    <div class="bg-light text-center rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h2 class="text-end">عرض بطاقات الدعوة</h2>
            <a class="btn btn-primary" href="@Url.Action("CreateInvitationCards","Admin")">إضافة بطاقة دعوة</a>
        </div>
        <div class="table-responsive">
            <table class="table text-start align-middle table-bordered table-hover mb-0" dir="rtl">
                <thead>
                    <tr class="text-dark">
                        <th scope="col">الرقم</th>
                        <th scope="col">الصورة</th>
                        <th scope="col">اسم البطاقة</th>
                        <th scope="col">الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.InvitationCardsId</td>
                            <td><img src="@item.ImageUrl" alt="@item.CardName" class="img-thumbnail small-image"></td>
                            <td>@item.CardName</td>
                            <td>
                                <!-- Action Buttons -->
                                <a class="btn btn-sm btn-warning" href="javascript:void(0);" data-toggle="modal" data-target="#editModal-@item.InvitationCardsId">تعديل</a>
                                <form id="deleteForm-@item.InvitationCardsId" action="@Url.Action("DeleteInvitationCards", "Admin", new { id = item.InvitationCardsId })" method="post" style="display:inline-block;">
                                    @Html.AntiForgeryToken()
                                    <button type="button" class="btn btn-sm btn-danger" onclick="confirmDelete(@item.InvitationCardsId)">حذف</button>
                                </form>
                            </td>
                        </tr>

                        <!-- Modal for Edit -->
                        <div class="modal fade" id="editModal-@item.InvitationCardsId" tabindex="-1" role="dialog" aria-labelledby="editModalLabel-@item.InvitationCardsId" aria-hidden="true">
                            <div class="modal-dialog modal-lg" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">تعديل بطاقة الدعوة</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        @using (Html.BeginForm("EditInvitationCards", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                        {
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" id="InvitationCardsId" name="InvitationCardsId" value="@item.InvitationCardsId" />

                                            <div class="form-group">
                                                <label for="CardName" class="control-label">اسم البطاقة</label>
                                                <input type="text" id="CardName" name="CardName" class="form-control" placeholder="اسم البطاقة" value="@item.CardName">
                                            </div>
                                            <div class="form-group">
                                                <label for="Price" class="control-label">السعر</label>
                                                <input type="text" id="Price" name="Price" class="form-control" placeholder="السعر" value="@item.Price">
                                            </div>
                                            <div class="form-group">
                                                <label for="ImageUrl" class="control-label">رابط الصورة</label>
                                                <input type="text" id="ImageUrl" name="ImageUrl" class="form-control" placeholder="رابط الصورة" value="@item.ImageUrl">
                                            </div>

                                            <div class="text-center">
                                                <button type="submit" class="btn btn-success btn-lg">حفظ التغييرات</button>
                                                <button type="button" class="btn btn-secondary btn-lg" data-dismiss="modal">إلغاء</button>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    function confirmDelete(invitationCardId) {
        Swal.fire({
            title: 'هل أنت متأكد؟',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            cancelButtonText: 'إلغاء',
            confirmButtonText: 'تأكيد',
        }).then((result) => {
            if (result.isConfirmed) {
                // Submit the form if confirmed
                document.getElementById('deleteForm-' + invitationCardId).submit();
            }
        });
    }
</script>
