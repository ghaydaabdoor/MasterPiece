@model MasterPiece.Models.ClothViewModel

@{
    ViewBag.Title = "إضافة ملابس";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    h2, label, input, textarea {
        text-align: right;
    }

    label {
        width: 100%;
        text-align: right;
        display: block;
    }

    ::placeholder {
        text-align: right;
    }

    .form-control {
        border-radius: 0.25rem;
    }

    .card {
        border-radius: 0.5rem;
    }

    .image-preview {
        margin-top: 10px;
        max-width: 100%;
        height: auto;
        text-align: right;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .form-floating {
        margin-bottom: 1rem;
    }

    .image-preview img {
        width: 100px;
    }

    .image-row {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem; /* Space between images */
        direction: rtl;
    }

        .image-row .form-floating {
            flex: 1 1 calc(33.333% - 1rem);
            box-sizing: border-box;
        }

            .image-row .form-floating img {
                width: 100px;
                height: auto;
            }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header text-center">
                    <h2>إضافة صنف ملابس جديد</h2>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("CreateCloth", "Admin", FormMethod.Post, new { enctype = "multipart /form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                        <!-- Venue Name -->
                        <div class="form-floating mb-3">
                            @Html.EditorFor(model => model.cloth.Name, new { htmlAttributes = new { @class = "form-control form-control-sm", placeholder = "الاسم" } })
                            @Html.LabelFor(model => model.cloth.Name, "الاسم", new { @class = "form-label" })
                            @Html.ValidationMessageFor(model => model.cloth.Name, "", new { @class = "text-danger" })
                        </div>

                        <!-- Location -->
                        <div class="form-floating mb-3">
                            @Html.EditorFor(model => model.cloth.Color, new { htmlAttributes = new { @class = "form-control form-control-sm", placeholder = "اللون" } })
                            @Html.LabelFor(model => model.cloth.Color, "اللون", new { @class = "form-label" })
                            @Html.ValidationMessageFor(model => model.cloth.Color, "", new { @class = "text-danger" })
                        </div>

                        <!-- Price -->
                        <div class="form-floating mb-3">
                            @Html.EditorFor(model => model.clothDetail.PriceDetails, new { htmlAttributes = new { @class = "form-control form-control-sm", placeholder = "السعر" } })
                            @Html.LabelFor(model => model.clothDetail.PriceDetails, "السعر", new { @class = "form-label" })
                            @Html.ValidationMessageFor(model => model.clothDetail.PriceDetails, "", new { @class = "text-danger" })
                        </div>

                        <!-- Rate -->
                        <div class="form-floating mb-3">
                            @Html.EditorFor(model => model.cloth.Rate, new { htmlAttributes = new { @class = "form-control form-control-sm", placeholder = "التقييم" } })
                            @Html.LabelFor(model => model.cloth.Rate, "التقييم", new { @class = "form-label" })
                            @Html.ValidationMessageFor(model => model.cloth.Rate, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-floating mb-3">
                            @Html.EditorFor(model => model.cloth.Category, new { htmlAttributes = new { @class = "form-control form-control-sm", placeholder = "الصنف" } })
                            @Html.LabelFor(model => model.cloth.Category, "الصنف", new { @class = "form-label" })
                            @Html.ValidationMessageFor(model => model.cloth.Category, "", new { @class = "text-danger" })
                        </div>

                        <!-- Image URL -->
                        <div class="form-floating mb-3">
                            @Html.EditorFor(model => model.cloth.ImageUrl, new { htmlAttributes = new { @class = "form-control form-control-sm", placeholder = "رابط الصورة", id = "imageUrl" } })
                            @Html.LabelFor(model => model.cloth.ImageUrl, "رابط الصورة الرئيسية", new { @class = "form-label" })
                            @Html.ValidationMessageFor(model => model.cloth.ImageUrl, "", new { @class = "text-danger" })
                            <div class="image-preview">
                                <img id="imagePreview" src="" />
                            </div>
                        </div>

                        <!-- Additional Image URLs with Preview -->
                        <!-- Row 1 -->
                        <div class="image-row">
                            <!-- Image URL 1 -->
                            <div class="form-floating mb-3">
                                @Html.EditorFor(model => model.clothDetail.ImageUrl1, new { htmlAttributes = new { @class = "form-control form-control-sm", placeholder = "رابط الصورة", id = "imageUrl1" } })
                                @Html.LabelFor(model => model.clothDetail.ImageUrl1, "رابط الصورة 1", new { @class = "form-label" })
                                @Html.ValidationMessageFor(model => model.clothDetail.ImageUrl1, "", new { @class = "text-danger" })
                                <div class="image-preview">
                                    <img id="imagePreview1" src="" />
                                </div>
                            </div>

                            <!-- Image URL 2 -->
                            <div class="form-floating mb-3">
                                @Html.EditorFor(model => model.clothDetail.ImageUrl2, new { htmlAttributes = new { @class = "form-control form-control-sm", placeholder = "رابط الصورة", id = "imageUrl2" } })
                                @Html.LabelFor(model => model.clothDetail.ImageUrl2, "رابط الصورة 2", new { @class = "form-label" })
                                @Html.ValidationMessageFor(model => model.clothDetail.ImageUrl2, "", new { @class = "text-danger" })
                                <div class="image-preview">
                                    <img id="imagePreview2" src="" />
                                </div>
                            </div>
                        </div>

                        <!-- Row 2 -->
                        <div class="image-row">
                            <!-- Image URL 4 -->
                            <div class="form-floating mb-3">
                                @Html.EditorFor(model => model.clothDetail.ImageUrl4, new { htmlAttributes = new { @class = "form-control form-control-sm", placeholder = "رابط الصورة", id = "imageUrl4" } })
                                @Html.LabelFor(model => model.clothDetail.ImageUrl4, "رابط الصورة 4", new { @class = "form-label" })
                                @Html.ValidationMessageFor(model => model.clothDetail.ImageUrl4, "", new { @class = "text-danger" })
                                <div class="image-preview">
                                    <img id="imagePreview4" src="" />
                                </div>
                            </div>

                            <!-- Image URL 3 -->
                            <div class="form-floating mb-3">
                                @Html.EditorFor(model => model.clothDetail.ImageUrl3, new { htmlAttributes = new { @class = "form-control form-control-sm", placeholder = "رابط الصورة", id = "imageUrl3" } })
                                @Html.LabelFor(model => model.clothDetail.ImageUrl3, "رابط الصورة 3", new { @class = "form-label" })
                                @Html.ValidationMessageFor(model => model.clothDetail.ImageUrl3, "", new { @class = "text-danger" })
                                <div class="image-preview">
                                    <img id="imagePreview3" src="" />
                                </div>
                            </div>
                        </div>

                        <div class="form-floating mb-3">
                            @Html.EditorFor(model => model.clothDetail.ClothMaterial, new { htmlAttributes = new { @class = "form-control form-control-sm", placeholder = "القماش" } })
                            @Html.LabelFor(model => model.clothDetail.ClothMaterial, "القماش", new { @class = "form-label" })
                            @Html.ValidationMessageFor(model => model.clothDetail.ClothMaterial, "", new { @class = "text-danger" })
                        </div>

                        <!-- Description and Other Fields -->
                        <div class="form-group mb-3">
                            @Html.LabelFor(model => model.clothDetail.Description, "الوصف", new { @class = "control-label" })
                            @Html.TextAreaFor(model => model.clothDetail.Description, new { @class = "form-control", rows = 4, placeholder = "الوصف" })
                            @Html.ValidationMessageFor(model => model.clothDetail.Description, "", new { @class = "text-danger" })
                        </div>


                        <div class="form-group mb-3">
                            @Html.LabelFor(model => model.clothDetail.Features, "المزايا", new { @class = "control-label" })
                            @Html.TextAreaFor(model => model.clothDetail.Features, new { @class = "form-control", rows = 2, placeholder = "المزايا" })
                            @Html.ValidationMessageFor(model => model.clothDetail.Features, "", new { @class = "text-danger" })
                        </div>

                        <!-- Submit Button -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg">إضافة</button>
                            <a href="@Url.Action("ShowCloths", "Admin")" class="btn btn-secondary btn-lg">رجوع</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function updateImagePreview(inputId, previewId) {
        const input = document.getElementById(inputId);
        const preview = document.getElementById(previewId);
        input.addEventListener('input', () => {
            preview.src = input.value;
        });
    }

    // Initialize image previews
    updateImagePreview('imageUrl1', 'imagePreview1');
    updateImagePreview('imageUrl2', 'imagePreview2');
    updateImagePreview('imageUrl3', 'imagePreview3');
    updateImagePreview('imageUrl4', 'imagePreview4');
    updateImagePreview('imageUrl5', 'imagePreview5');
    updateImagePreview('imageUrl6', 'imagePreview6');

    // Initialize image previews
    updateImagePreview('imageUrl', 'imagePreview');
    for (let i = 1; i <= 6; i++) {
        updateImagePreview('imageUrl' + i, 'imagePreview' + i);
    }
    updateImagePreview('locationUrl', 'locationPreview');
</script>




