@model MasterPiece.Models.User
@{
    ViewBag.Title = "EditProfile";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<link href="~/Content/EditProfile.css" rel="stylesheet" />
<link href="~/Content/profile.css" rel="stylesheet" />

<style>
    .text-danger {
        display: block;
        text-align: right;
        direction: rtl;
    }

    input {
        border-radius: 0 !important;
    }

    .edit-profile-btn {
        transition: 0.3s !important;
        border-radius: 0 !important;
        width: 100% !important;
    }

        .edit-profile-btn:hover {
            color: white !important;
            transform: scale(1) !important;
        }
</style>

<main class="main profilePage">
    <!-- EachService Section -->
    <section id="EachService" class="EachService section">
        <div class="container rounded bg-white mt-5 mb-5">
            <div class="row">
                <div class="col-md-9 border-right">
                    <div class="p-3 py-5">
                        <div class="d-flex justify-content-between align-items-center">
                            <h4 id="sett" class="text-right Eachsection-title">تغيير كلمة السر</h4>
                        </div>

                        <!-- Start of the form to change the password -->
                        @using (Html.BeginForm("ChangePassword", "Users", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(model => model.UserId)

                            <div class="row mt-3">
                                <!-- Current Password -->
                                <div class="col-md-12">
                                    <label class="labels">كلمة السر الحالية</label>
                                    @Html.Password("currentPassword", null, new { @class = "form-control", placeholder = "كلمة السر الحالية" })
                                    @Html.ValidationMessage("currentPassword", "", new { @class = "text-danger" })
                                </div>

                                <!-- New Password -->
                                <div class="col-md-12 mt-3">
                                    <label class="labels">كلمة السر الجديدة</label>
                                    @Html.Password("newPassword", null, new { @class = "form-control", placeholder = "كلمة السر الجديدة" })
                                    @Html.ValidationMessage("newPassword", "", new { @class = "text-danger" })
                                </div>

                                <!-- Confirm New Password -->
                                <div class="col-md-12 mt-3">
                                    <label class="labels">تأكيد كلمة السر</label>
                                    @Html.Password("confirmPassword", null, new { @class = "form-control", placeholder = "تأكيد كلمة السر" })
                                    @Html.ValidationMessage("confirmPassword", "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="mt-5 text-center">
                                <button class="edit-profile-btn" type="submit">حفظ</button>
                            </div>
                        }
                        <!-- End of form -->
                    </div>
                </div>

                <!-- Profile Picture Section -->
                <div class="col-md-3 border-right">
                    <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                        <img class="rounded-circle mt-5" width="150px" src="~/Content/img/testimonials/testimonials-2.jpg" alt="Profile Picture">
                        <span class="font-weight-bold">@Model.FirstName @Model.LastName</span>
                        <span class="text-black-50">@Model.Email</span>
                        <span> </span>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@* SweetAlert for password change success *@
@if (TempData["PasswordChanged"] != null)
{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script type="text/javascript">
        Swal.fire({
            title: 'تم تغيير كلمة السر بنجاح',
            icon: 'success',
            confirmButtonText: 'العودة للصفحة الشخصية',
            confirmButtonColor: '#3085d6',
            allowOutsideClick: false,
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '@Url.Action("Profile", "Users")';
            }
        });
    </script>
}
}
